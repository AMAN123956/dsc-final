<%- include('partials/header'); -%>
    <div class="container p-5 my-2 d-flex flex-column align-items-center">
        <div class="form-box">
            <i class="fa fa-twitter mb-3" aria-hidden="true" style="font-size:3.5rem;"></i>
            <h2 class="my-3">Log in to Twitter</h2>
            <%- include("partials/messages"); %>
            <form action="/users/login" method="POST">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input name="password" type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary my-1" style=" width:100%;">Submit</button>
                <a href="#">Forgot Password</a>
                <a href="/users/register">? Sign up for twitter</a>
            </form>
            
        </div>
    </div>
 
    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous">
    </script>
    
</body>
</html>